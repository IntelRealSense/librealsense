+#define UVC_GUID_FORMAT_BAYER16 \
+	{ 'R',  'W',  '1',  '6', 0x66, 0x1a, 0x42, 0xa2, \
+	0x90, 0x65, 0xd0, 0x18, 0x14, 0xa8, 0xef, 0x8a}
